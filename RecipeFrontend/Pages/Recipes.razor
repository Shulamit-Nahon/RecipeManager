@page "/"
@using RecipeFrontend.DTOs
@using RecipeFrontend.Services
@inject NavigationManager Navigation
@inject RecipeService recipeService


<div class="p-5 mb-4 bg-light rounded-3 shadow-sm">
    <div class="container-fluid py-3">
        <h1 class="display-5 fw-bold text-center"> Welcome to Recipe Website</h1>
        <p class="fs-4 text-center">Save, share, and discover your favorite recipes</p>
    </div>
</div>


@if (recipes == null)
{
    <p><em>Loading...</em></p>
}
else if (recipes.Count == 0)
{
    <p>No recipes found.</p>
}
else
{

    <div class="container">
        <div class="row">
            @foreach (var recipe in recipes)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm bg-light">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@recipe.Title</h5>
                            <p class="card-text">@recipe.Description</p>
                            <p class="card-text text-muted mt-auto">By @recipe.UserFullName</p>
                            <a class="btn btn-primary mt-3" href="/recipes/@recipe.Id">View Recipe</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <a href="/recipes/add" class="btn btn-primary btn-lg  mb-4">+ Add New Recipe</a>

}

@code {
    private List<RecipeDto>? recipes;

    protected override async Task OnInitializedAsync()
    {
        recipes = await recipeService.GetAllRecipesAsync();
    }
}
